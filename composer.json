{
  "name": "omz13/kirby3-whatever",
  "description": "kirby3 plugin to provide a demo 'whatever' panel field",
  "keywords": [
    "kirby3",
    "plugin",
    "whatever"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "David Somers",
      "email": "dsomers@omz13.com",
      "homepage": "https://meldingstuff.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=7.1",
    "getkirby/cms": "^3.0.0-RC-3.0"
  },
  "require-dev": {
    "localheinz/composer-normalize": "^0.8.0"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "omz13\\": "src/"
    },
    "files": [
      "config.php"
    ]
  },
  "archive": {
    "exclude": [
      ".*",
      "kirby",
      "makefile",
      "*.xml",
      "!/vendor/*",
      "/vendor/*/*/.*",
      "/vendor/*/*/docs/*",
      "/vendor/*/*/example/*",
      "/vendor/*/*/examples/*",
      "/vendor/*/*/test/*",
      "/vendor/*/*/tests/*",
      "/vendor/*/*/php4/*"
    ]
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/k-next/kirby"
    }
  ],
  "minimum-stability": "beta",
  "scripts": {
    "build": [
      "composer dumpautoload -o"
    ]
  }
}
